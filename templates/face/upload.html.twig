{% extends 'base.html.twig' %}

{% block title %}Celebrity Face Matcher{% endblock %}

{% form_theme form 'tailwind_2_layout.html.twig' %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-900">
    <div class="w-[40%] bg-gray-800 rounded-lg shadow-xl p-6 text-center">
        <h1 class="text-3xl font-bold text-white mb-6">Celebrity Face Matcher - Upload Backend</h1>

        {% for label, messages in app.flashes %}
            <div class="p-4 mb-4 text-sm rounded-lg
                {% if label == 'success' %}
                    bg-green-100 text-green-800
                {% elseif label == 'error' %}
                    bg-red-100 text-red-800
                {% else %}
                    bg-gray-100 text-gray-800
                {% endif %}
            ">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        <div>
            {{ form_start(form, { attr: { class: 'space-y-4' } }) }}
            <div>
                {{ form_label(form.name, null, { label_attr: { class: 'block text-sm font-medium text-gray-300' } }) }}
                {{ form_widget(form.name, { attr: { class: 'mt-1 block w-full rounded-md bg-gray-700 border-gray-600 focus:ring-blue-500 focus:border-blue-500' } }) }}
                {{ form_errors(form.name, { attr: { class: 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                {{ form_label(form.picture, null, { label_attr: { class: 'block text-sm font-medium text-gray-300' } }) }}
                {{ form_widget(form.picture, { attr: { class: 'mt-1 block w-full rounded-md bg-gray-700 text-white border-gray-600 focus:ring-blue-500 focus:border-blue-500' } }) }}
                {{ form_errors(form.picture, { attr: { class: 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Upload
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
