{% extends 'base.html.twig' %}

{% block title %}Celebrity Face Matcher{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-900">
    <div class="w-[40%] bg-gray-800 rounded-lg shadow-xl p-6 text-center">
        <h1 class="text-3xl font-bold text-white mb-6">Celebrity Face Matcher - Face List</h1>

        <div class="grid grid-flow-row auto-rows-max gap-4" style="grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));">
            {% for face in faces %}
                <div class="flex justify-center">
                    <a href="{{ path('face_show', { id: face.id }) }}">
                        <img src="{{ path('face_picture', { id: face.id }) }}" alt="{{ face.name }}" title="{{ face.name }}" class="w-16 h-16">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
